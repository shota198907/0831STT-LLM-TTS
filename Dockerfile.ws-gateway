FROM node:20-slim

WORKDIR /app

# Install production deps
COPY package*.json ./
RUN npm ci --omit=dev && npm cache clean --force && rm -rf /var/lib/apt/lists/*

# Copy source
COPY server ./server

# Runtime env
ENV NODE_ENV=production
ENV PORT=8080
EXPOSE 8080

# Run as non-root
USER node

CMD ["node", "server/index.js"]

